@model UICategoryWithSub

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" asp-action="Add">
    <div class="form-group">
        <label asp-for="category.Name">Katiqoriya adı:</label>
        <input asp-for="category.Name" class="form-control" required>
        <div class="invalid-feedback">Zəhmət olmasa doldurun</div>
    </div>

    <input type="hidden" asp-for="category.Id" />

    <table id="SubCategoryTable" class="table  hover">
        <thead>
            <tr>
                <th class="th-sm">
                    Seç
                </th>
                <th class="th-sm">
                    ID
                </th>
                <th class="th-sm">
                    Adı
                </th>
                <th class="th-sm">
                    Açıqlama
                </th>
                <th class="th-sm">
                    Katigorya ID
                </th>

            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.subCategories.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox"  asp-for="subCategories[i].IsCheck">
                    </td>
                    <td>@Model.subCategories[i].Id </td>
                    <td>@Model.subCategories[i].Name </td>
                    <td>@Model.subCategories[i].Description </td>
                    <td>@Model.subCategories[i].CategoryId </td> 
                </tr>
            }

        </tbody>
    </table>



    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Silməyə əminsənmi?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Sil</button>
                </div>
            </div>
        </div>
    </div>


    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Əlavə et</button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Düzgün əlavə etdiyinə əminsənmi?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Düzəliş et</button>

                    <button type="submit" class="btn btn-primary">Yadda saxla</button>
                </div>
            </div>
        </div>
    </div>

</form>




@section Scripts{
    <script>
        $(document).ready(function () {
            $('#SubCategoryTable').DataTable();
        });

    </script>
}