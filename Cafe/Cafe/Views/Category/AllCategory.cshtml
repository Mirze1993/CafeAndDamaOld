

@model IList<Category>

@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- add begin-->
<div class="container">
    <a asp-action="Add"   class="btn btn-primary"   >
        <i  class="fa fa-plus-circle">
        </i> Add
    </a>
</div>

<table id="CategoryTable" class="table  hover">
    <thead>
        <tr>
            <th class="th-sm">
                ID
            </th>
            <th class="th-sm">
                Name
            </th>
            <th class="th-sm">
                Edit
            </th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Id</td>
                <td>@Model[i].Name</td>
                <td>
                    <button id="@Model[i].Id" type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                        <i class="fa fa-trash-alt"></i>
                    </button>
                    <a  asp-controller="Category" asp-action="Update" asp-route-Id="@Model[i].Id" class="btn btn-primary" >
                        <i class="fa fa-edit"></i>
                    </a>
                </td>

            </tr>
        }

    </tbody>
</table>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Silməyə əminsənmi?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Sil</button>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script>
        $(document).ready(function () {
            $('#CategoryTable').DataTable();
        });
        
    </script>
}