@model UILogin
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <!--login-->
    <div id="loginbox" style="margin-top: 50px;" class="mainbox col-lg-6 offset-md-3 col-md-8 offset-sm-2">
        <div class="card card-inverse card-info">
            <div class="card-header">
                <div class="card-title">Sign In</div>
                <div style="float: right; font-size: 80%; position: relative; top: -10px;">
                    <a href="#">Forgot password?</a>
                </div>
            </div>

            
            <div style="padding-top: 30px;" class="card-block">
                <div style="display: none;" id="login-alert" class="alert alert-danger col-md-12"></div>
                <form asp-action="login" asp-controller="Home" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <div class="input-group">
                            
                            <input  placeholder="UserName" asp-for="UserName" class="form-control">
                        </div> <!-- input-group.// -->
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <div class="input-group">
                            
                            <input placeholder="Password"  class="form-control" asp-for="Password">
                        </div> <!-- input-group.// -->
                    </div> <!-- form-group// -->

                    <div class="input-group">
                        <div class="form-check">
                            <label>
                                <input  asp-for="RememberMe" />Remember me
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Login  </button>
                    </div> <!-- form-group// -->
                    <p class="text-center"><a href="#" class="btn">Forgot password?</a></p>
                    <div class="form-group">
                        <div class="col-lg-12 control">
                            <div style="padding-top: 15px; font-size: 85%;">
                                <a asp-action="Signup">Qeydiyyat </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>

