@model UIAppUser
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--signup-->
<div id="signupbox" style="margin-top: 50px;" class="mainbox col-lg-6 offset-md-3 col-md-8 offset-sm-2">
    <div class="card card-inverse card-info">
        <div class="card-header">
            <div class="card-title">Qeydiyyat</div>
            <div style="float: right; font-size: 85%; position: relative; top: -10px;">
                <a id="signinlink" asp-action="Login" asp-controller="Home" >Giris et</a>
            </div>
        </div>
        <div class="card-block">
            
            <form asp-action="Signup" asp-controller="Home" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name" class="col-lg-3 form-control-label">Ad</label>
                    <div class="col-lg-9">
                        <input  class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>


                <div class="form-group">
                    <label asp-for="UserName" class="col-lg-3 form-control-label">Istifadeci adi</label>
                    <div class="col-lg-9">
                        <input  class="form-control" asp-for="UserName" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="col-lg-3 form-control-label">Email</label>
                    <div class="col-lg-9">
                        <input  class="form-control" asp-for="Email" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="col-lg-3 form-control-label">Telfon</label>
                    <div class="col-lg-9">
                        <input class="form-control" asp-for="Phone" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="col-lg-3 form-control-label"></label>
                    <div class="col-lg-9">
                        <input  class="form-control" asp-for="Password" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConformPassword" class="col-lg-3 form-control-label"></label>
                    <div class="col-lg-9">
                        <input  class="form-control" asp-for="ConformPassword" />
                    </div>
                </div>

                <div class="form-group">
                    <!-- Button -->
                    <div class="offset-md-3 col-lg-9">
                        <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>