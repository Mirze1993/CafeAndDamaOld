@model UIProductSupCategory
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>UpdateProduct</h1>
<div class="form-group row">
    <form enctype="multipart/form-data" method="post" asp-action="UpdateProduct">
        <input type="hidden" asp-for="Product.Id" />
        <input type="hidden" asp-for="Product.ImgPath" />
        <label asp-for="Product.Name" class="col-sm-2 col-form-label">Adi</label>
        <div class="col-sm-10">
            <input asp-for="Product.Name" class="form-control" />
        </div>

        <label asp-for="Product.Description" class="col-sm-2 col-form-label">Açıqlama</label>
        <div class="col-sm-10">
            <input asp-for="Product.Description" class="form-control" />
        </div>

        <div class="col-sm-10">
            <label asp-for="Product.Price">Qiyməti</label>
            <input asp-for="Product.Price" pattern="[0-9]+([.][0-9]+)?" />
        </div>



        <div class="col-sm-10">
            <label asp-for="Product.SubCategoryId">Alt katiqoryasi</label>
            <select asp-for="Product.SubCategoryId" asp-items="Model.Subcategores" ></select>
        </div>


        <div class="col-sm-10 cus">

            <label asp-for="Img">Photo</label>
            <input type="file" class="form-control-file" asp-for="Img">
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-1">
                <button type="submit" class="btn btn-primary">Yadda saxla</button>
            </div>
        </div>


    </form>
</div>


@if (Model.Product!= null)
{
    <div>
        @{var filePath = "~/userimg/" + (Model.Product.ImgPath ?? "img.jpg"); }
        <!--image-->
        <div class="card" style="width: 18rem;">
            <img asp-append-version="true" class="card-img-top" src=@filePath />"
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>

    </div>

    @section Scripts{
        <script>
            

        </script>
    }
}

