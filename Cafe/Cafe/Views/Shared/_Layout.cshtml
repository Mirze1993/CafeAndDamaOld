<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/twitter-bootstrap/css/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/customer/css/simple-sidebar.css" rel="stylesheet" />
    <link href="~/twitter-bootstrap/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/datatables/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />

</head>


<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-action="index" asp-controller="Home">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Admin" asp-action="AdminIndex">Admin <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="UserHome" asp-action="Index">Admin </a>
                </li>


            </ul>

            <ul class="nav justify-content-end">

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="logout" class="nav-link active">cixis @User.Identity.Name</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="login" class="nav-link active">Giris</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="signup" class="nav-link active">qeydiyyat</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>


    <br /><br />
    <footer id="sticky-footer" class="py-4 bg-dark text-white-50">
        <div class="container text-center">
            <small>Copyright &copy; Your Website</small>
        </div>
    </footer>


    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.bundle.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
